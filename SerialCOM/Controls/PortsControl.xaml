<UserControl x:Class="Kogler.SerialCOM.PortsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kogler.SerialCOM"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding Dic[PortsControl], Source={StaticResource Locator}}">
    <StackPanel Orientation="Vertical" Margin="5">
        <Button Content="Refresh ports" Command="{Binding RefreshPortsCommand}" Padding="5" Margin="5" />
        <TextBlock Text="Port:" Margin="5,5,5,0"/>
        <ComboBox ItemsSource="{Binding Ports}" SelectedValue="{Binding SelectedPort, Mode=TwoWay}" IsEnabled="{Binding CanSelectPort}" Padding="5" Margin="5" MinWidth="50" />
        <TextBlock Text="Device:" Margin="5,5,5,0"/>
        <ComboBox ItemsSource="{Binding Models}" SelectedValue="{Binding SelectedModel, Mode=TwoWay}" DisplayMemberPath="Metadata.Description" Padding="5" Margin="5" MinWidth="50" />
        <Button Content="Open" Command="{Binding OpenPortCommand}" Padding="5" Margin="5" />
    </StackPanel>
</UserControl>
